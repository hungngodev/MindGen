datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
 
generator client {
  provider = "prisma-client-js"
}
 
model User {
  id            String          @id @default(cuid())
  name          String?
  username      String?         @unique
  email         String?         @unique
  emailVerified DateTime?
  image         String?

  accounts      Account[]
  sessions      Session[]
  Authenticator Authenticator[]   // Optional for WebAuthn support

  plans          Plan[] @relation("UserPlan")
  logs          Log[]   @relation("UserLog")
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}

model Plan {
  id String @id @default(cuid())
  content String
  role String
  created_at DateTime @default(now())

  userId String
  user User @relation("UserPlan",fields: [userId], references: [id], onDelete: Cascade)

  logs Log[] @relation("PlanLog")
}

model Log{
  id String @id @default(cuid())
  input String
  output String
  model String
  type String
  created_at DateTime @default(now())
  inputToken String?
  outputToken String?
  cost Float?
  time_taken Int?
  
  planId String
  userId String

  plan Plan @relation("PlanLog",fields: [planId], references: [id], onDelete: Cascade )
  user User @relation("UserLog", fields: [userId], references: [id] , onDelete: Cascade)
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @unique
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?
  refresh_token_expires_in Int?
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@unique([provider, providerAccountId])
  @@index([userId])
}
 
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
 
model VerificationToken {
  identifier String
  token      String
  expires    DateTime
 
  @@unique([identifier, token])
}
 
// Optional for WebAuthn support
model Authenticator {
  credentialID         String  @unique
  userId               String
  providerAccountId    String
  credentialPublicKey  String
  counter              Int
  credentialDeviceType String
  credentialBackedUp   Boolean
  transports           String?
 
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
 
  @@id([userId, credentialID])
}